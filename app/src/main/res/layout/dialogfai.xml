<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/whitebottom"

    android:orientation="vertical"
    android:layout_gravity="center"

    android:id="@+id/failure">

    <TextView
        android:layout_width="75dp"
        android:id="@+id/closedialog"
        android:layout_height="5dp"
        android:background="@drawable/dialogclose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/closedialog"
        tools:ignore="MissingConstraints">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="16sp"
            app:lottie_rawRes="@raw/error1"


            android:elevation="5dp"
            app:lottie_autoPlay="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical"

            >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Oh No!"
            android:layout_marginTop="10dp"

            android:textColor="#FF0000"
            android:textSize="20dp"
            android:letterSpacing="0.1"
            android:textStyle="bold"
            android:fontFamily="@font/urbanist" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Something went wrong."


            android:textColor="#FF0000"
            android:letterSpacing="0.1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/urbanist" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginStart="16sp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="16sp"
            android:text="We aren't able to process your payment. Please try again."
            android:textColor="@color/black"
            android:textSize="16dp"

            android:fontFamily="@font/urbanist" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:elevation="2dp"

            android:background="#FF0000"
            android:layout_margin="16sp"
            android:letterSpacing="0.1"


            android:layout_weight="1"

            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/statusError"



                android:gravity="center"
                android:layout_margin="10dp"

                android:text="Try Again"
                android:textAllCaps="true"
                android:textColor="@color/white"



                android:textStyle="bold"

                android:fontFamily="@font/urbanist" />







        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>